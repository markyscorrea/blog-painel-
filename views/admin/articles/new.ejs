<%- include('../../partials/header') %>

<body>
    <%- include('../../partials/navbar') %>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Novo artigo</h2>
            </div>
            <div class="card-body">
                <form method="post" action="/articles/save">
                    <input class="form-control mb-2" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo">
                    <textarea id="article" class="form-control mt-3" placeholder="Escreva o artigo aqui" name="body"></textarea>
                    <label class="m-2">Categoria</label>
                    <select name="category" class="form-control">
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id  %>"> <%= category.title %> </option>
                        <% }) %>
                    </select>
                    <button class="btn btn-success mt-3">Cadastrar</button>
                </form>
            </div>        
        </div>
        
    </div>
</body>

<%- include('../../partials/footer') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            'advlist autolink lists link image searchreplace insertdatetime wordcount media charmap fullscreen print table code paste preview anchor',
        ]
    });

</script>